@{
}
@model BooksViewModel

<h1>Hilton's Book Store</h1>

@*Pulls books from the view model and iterates through each book, creating a different block for each book*@
@foreach (Book b in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h3>@b.Title</h3>

            <ul>
                <li>Author: @b.Author</li>
                <li>Publisher: @b.Publisher</li>
                <li>ISBN: @b.Isbn</li>
                <li>Classification: @b.Classification</li>
                <li>Category: @b.Category</li>
                <li>Page Count: @b.PageCount Pages</li>
                <li>Price: $@b.Price</li>
            </ul>
            <br />
        </div>
    </div>
}

@*dynamically creates page number tags, styled using the pagination tag helper class and created dynamically based on the pageinfo view model*@
<div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true" page-class="btn" 
    page-class-normal="btn-outline-dark" page-class-selected="btn-success" class="btn-group pull-right m-1"></div>
