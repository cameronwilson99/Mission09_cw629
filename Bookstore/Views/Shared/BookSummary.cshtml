@{
}
@model Book
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>@Model.Title</h3>

        <span class="badge bg-success text-white" style="float:right">Price: $@Model.Price</span>
        <ul>
            <li>Author: @Model.Author</li>
            <li>Publisher: @Model.Publisher</li>
            <li>ISBN: @Model.Isbn</li>
            <li>Classification: @Model.Classification</li>
            <li>Category: @Model.Category</li>
            <li>Page Count: @Model.PageCount Pages</li>
        </ul>

        <form method="post" asp-page="/Buy">
            <input type="hidden" asp-for="@Model.BookId"/>
            @*grabs current url and uses it for when the buy button is pressed, allows the user to return to previous page*@
            <input type="hidden" name="returnURL" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text">
                <button type="submit" class="btn btn-primary float-end">Buy Now</button>
            </span>
        </form>
    </div>
</div>